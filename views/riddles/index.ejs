<!DOCTYPE html>
<html lang="en">

<head>
  <style>
@import url('https://fonts.googleapis.com/css2?family=Syne+Mono&display=swap');
</style>;
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/stylesheets/style.css" />
  <title>Riddles Index</title>
</head>

<body>
  <center>
    <%- include('../partials/_navbar.ejs') %>
      <h2>Riddles Index</h2>
      <p>
      <div class="flex-container-riddle">
        <ul>
          <% riddles.forEach((riddle)=> { %>

            Q: <%= riddle.riddle %>
              <br><i>
                <span class="owned-by-text">owned by <%= riddle.owner.username %>.</span>
                  <span class="view-text"><a href="/riddles/<%= riddle._id %>">View</i></a></span>

              <br><Br>
              <% }) %>
        </ul>
  </center>
</body>

</html>