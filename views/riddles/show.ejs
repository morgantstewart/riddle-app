<!-- views/listings/show.ejs -->

<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>
    <%= owner.username %>'s riddle
  </title>
</head>

<body>


    <h2>Details</h2>
    <p>Riddle: <%= riddle.riddle %>
    </p>
    <p>Answer: <%= riddle.answer %>
    </p>



    <% if (owner._id.toString() === user._id.toString()) { %>
    <p>You own this!</p>
<br><Br>
    <a href="/riddles/<%= riddle._id %>/edit">Edit this riddle</a>
<br><Br>
    <!-- <form action="/riddles/<#%= riddle._id %>?_method=DELETE" method="POST"> -->
      <form action="/riddles/<%= riddle._id %>?_method=DELETE" method="POST">

    <button type="submit">Delete this riddle</button>
    </form>
    <% } %>
</body>
</html>


