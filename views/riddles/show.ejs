<!-- views/listings/show.ejs -->

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>
        <%= riddle.owner.username %>'s riddle
    </title>
</head>

<body>
    <%- include('../partials/_navbar.ejs') %>

        <h2>Details</h2>
        <p>Riddle: <%= riddle.riddle %>
        </p>
        <p>Answer: <%= riddle.answer %>
        </p>


        <h2>Owner</h2>
        <% if (riddle.owner._id.equals(user._id)) { %>
            <p>You own this!</p>

            <form action="/riddles/<%= riddle._id %>?_method=DELETE" method="POST">
                <button type="submit">Delete this riddle</button>
            </form>

</body>
</html>