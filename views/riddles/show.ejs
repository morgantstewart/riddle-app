<!-- views/listings/show.ejs -->

<!DOCTYPE html>
<html lang="en">

<head>
  <style>
    @import url('https://fonts.googleapis.com/css2?family=Syne+Mono&display=swap');
  </style>;
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel="stylesheet" href="/stylesheets/style.css" />

  <title>
    <%= owner.username %>'s riddle
  </title>
</head>

<body>
  <center>
    <h2>Details</h2>
    <div class="flex-container-details">
      <br><br><br>

      <p>Q: <%= riddle.riddle %>
      </p>
    </div>

   
    <div class="flex-container-details-edit">

      <p>A: <%= riddle.answer %>
      </p><br>
    </div><br><br> </div>

    <% if (owner._id.toString()===user._id.toString()) { %>



      <p>You own this!</p>

      <a href="/riddles/<%= riddle._id %>/edit">Edit this riddle</a><br><br>
      <p>
      <form action="/riddles/<%= riddle._id %>?_method=DELETE" method="POST">
        <button type="submit">Delete this riddle</button>
      </form>
      </p>
      <% } %>
  </center>
</body>

</html>