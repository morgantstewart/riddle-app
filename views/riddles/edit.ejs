<!-- views/listings/edit.ejs -->

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Edit <%= riddle.name %></title>
  </head>
  <body>
    <%- include('../partials/_navbar.ejs') %>
    <h1>Edit a Riddle!</h1>
<form action="/users/<%= user._id %>/riddles/<%= riddle._id %>?_method=PUT" method="POST">

        <label for="riddle">Riddle:</label>
      <textarea name="riddle" id="riddle"></textarea>
     
      <br><br>
      <label for="answer">Answer:</label>
      <textarea name="answer" id="answer"></textarea>
      <br><br>
      <button type="submit">Edit Riddle</button>
    </form>




  </body>
</html>
